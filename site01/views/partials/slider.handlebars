<div class="page-slider-wrap">
    <div id="page-slider">
        <ul>
            {{#each data.sliders }}
                <li data-transition="zoomout" data-masterspeed="1300">
                    <img src="{{this.post.image.src}}" alt="bg" data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">
                    <div class="tp-caption slider-title text-{{this.subTitleAlignment}} sfl" data-x="{{this.subTitleAlignment}}" data-hoffset="-15" data-y="top" data-voffset="130" data-speed="1000" data-start="500" data-easing="Back.easeInOut" data-endspeed="300" style="color:#FFFFFF">{{this.post.title}}</div>
                    <div class="tp-caption slider-sub-title text-{{this.subTitleAlignment}} sfl" data-x="{{this.subTitleAlignment}}" data-hoffset="-15" data-y="center" data-speed="1100" data-start="600" data-easing="Back.easeInOut" data-endspeed="300" style="color:#ecc5a8">{{{this.subTitle}}}</div>
                    {{#if this.post.link}}
                        <a href="{{this.post.link}}" target="_blank" 
                    {{else}}
                        <a href="/{{../language}}/post/{{this.post.slug}}" 
                    {{/if}}
                    class="tp-caption sfb btn btn-big text-{{this.subTitleAlignment}}" data-x="{{this.subTitleAlignment}}" data-hoffset="-15" data-y="bottom" data-voffset="-130" data-speed="1000" data-start="700" data-easing="Back.easeInOut" data-endspeed="300" style="color:#FFFFFF">{{../translation.readMore}}</a>
                </li>
            {{/each}}
        </ul>
        <div class="tp-bannertimer tp-bottom"></div>
    </div>
</div>